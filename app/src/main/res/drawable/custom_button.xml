<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="@color/dark_blue"/>
            <solid android:color="@color/main_yellow"/>
        </shape>
    </item>
    <item>
            <shape android:shape="rectangle">
                <corners android:radius="50dp" />
                <stroke android:width="1dp" android:color="@color/main_yellow" />
                <gradient android:centerColor="#0E4173" android:endColor="#570D77" android:startColor="#214C77" />
            </shape>
    </item>
</selector>